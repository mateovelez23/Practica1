<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5sp"
    tools:context="com.mateo_velez.punto3.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tResultado"
            android:gravity="center_vertical"
            android:enabled="false"
            android:textSize="60sp"
            android:layout_margin="2dp"
            android:text="@string/cero"
            android:textColor="@color/black"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:background="@color/colorPrimary"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:id="@+id/b7"
            android:onClick="siete"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:background="@color/colorPrimary"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:id="@+id/b8"
            android:onClick="ocho"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:background="@color/colorPrimary"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:id="@+id/b9"
            android:onClick="nueve"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:background="@color/colorPrimary"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:id="@+id/bmas"
            android:onClick="mas"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:background="@color/colorPrimary"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:id="@+id/b4"
            android:onClick="cuatro"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:background="@color/colorPrimary"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:id="@+id/b5"
            android:onClick="cinco"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:background="@color/colorPrimary"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:id="@+id/b6"
            android:onClick="seis"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:background="@color/colorPrimary"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:id="@+id/bmenos"
            android:onClick="menos"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:background="@color/colorPrimary"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:id="@+id/b1"
            android:onClick="uno"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:background="@color/colorPrimary"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:id="@+id/b2"
            android:onClick="dos"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:background="@color/colorPrimary"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:id="@+id/b3"
            android:onClick="tres"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="*"
            android:background="@color/colorPrimary"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:id="@+id/bpor"
            android:onClick="por"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bpunto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:onClick="punto"
            android:text="."
            android:textSize="22sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/b0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:onClick="cero"
            android:text="0"
            android:textSize="22sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bigual"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:onClick="igual"
            android:text="="
            android:textSize="22sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bdividido"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:onClick="div"
            android:text="/"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>
